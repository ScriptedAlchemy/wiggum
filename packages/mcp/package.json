{
  "name": "@wiggum/mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server implementation",
  "type": "module",
  "bin": {
    "wiggum-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "rslib build && chmod 755 dist/index.js",
    "dev": "rslib build --watch",
    "start": "node dist/index.js",
    "test": "pnpm run -s build && rstest",
    "test:watch": "rstest --watch",
    "clean": "rm -rf dist",
    "publint": "publint"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@xenova/transformers": "^2.17.2",
    "fuse.js": "^7.1.0",
    "marked": "^16.4.2",
    "natural": "^6.12.0",
    "stopword": "^2.0.8",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@rslib/core": "^0.19.6",
    "@rstest/core": "^0.8.5",
    "@types/node": "^25.2.3",
    "publint": "^0.3.17",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
