{
  "name": "@wiggum/agent",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared Wiggum agent utilities for OpenCode integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "test": "npm run -s build && node test/run-tests.cjs",
    "publint": "publint"
  },
  "author": "Wiggum Team",
  "license": "MIT",
  "dependencies": {
    "@opencode-ai/sdk": "^0.6.10"
  },
  "devDependencies": {
    "@rslib/core": "^0.12.4",
    "@types/node": "^20.19.33",
    "publint": "^0.3.17",
    "typescript": "^5.9.3"
  }
}
