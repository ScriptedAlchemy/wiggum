{
  "name": "@wiggum/cli",
  "version": "1.0.0",
  "type": "module",
  "description": "Wiggum CLI: passthrough for R* tools + OpenCode agent",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": {
    "wiggum": "./bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "start": "node bin/cli.js",
    "dev": "rslib build --watch",
    "build": "rslib build",
    "prebuild": "npm run clean",
    "test": "npm run build && rstest",
    "clean": "rm -rf dist",
    "list:providers": "tsx list-opencode-providers.ts",
    "publint": "publint"
  },
  "keywords": [
    "cli",
    "command-line",
    "wiggum",
    "opencode",
    "rspack",
    "rspress",
    "rstest",
    "rslint",
    "rsbuild"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@opencode-ai/sdk": "^1.2.5",
    "@wiggum/agent": "workspace:*",
    "chalk": "^4.1.2",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.3",
    "ora": "^5.4.1",
    "package-manager-detector": "^1.6.0",
    "which": "^4.0.0"
  },
  "devDependencies": {
    "@rslib/core": "^0.19.6",
    "@rspack/cli": "^1.7.6",
    "@rstest/core": "^0.8.5",
    "@types/node": "^25.2.3",
    "@types/which": "^3.0.4",
    "jest": "^29.7.0",
    "publint": "^0.3.17",
    "rspress": "^1.47.1",
    "strip-ansi": "^7.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
